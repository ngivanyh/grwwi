{
  "manifest_version": 3,
  "name": "grrwi",
  "version": "0.2",

  "description": "Improves review writing on goodreads (goodreads.com) by completing (auto-closing) the formatting tags.",

  "icons": {
    "48": "icons/icon.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.goodreads.com/review/edit/*"],
      "js": ["grrw-full_page.js"]
    },
    {
      "matches": ["*://*.goodreads.com/review/list/*"],
      "js": ["grrw-booklist.js"]
    }
  ]
}