{
  "manifest_version": 3,
  "name": "grrwi",
  "version": "0.3",

  "description": "Improves general review writing on goodreads (goodreads.com).",

  "icons": {
    "48": "icons/icon.png"
  },

  "permissions": [
    "storage"
  ],

  "options_ui": {
    "page": "./src/options/options.html"
  },

  "background": {
    "service_worker": "./src/background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["*://*.goodreads.com/review/edit/*"],
      "js": ["./src/grrw-full_page.js"]
    },
    {
      "matches": ["*://*.goodreads.com/review/list/*"],
      "js": ["./src/grrw-booklist.js"]
    }
  ]
}